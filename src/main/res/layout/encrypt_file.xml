<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView android:text="     File Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <EditText android:id="@+id/fname2" android:layout_width="300dp" android:layout_gravity="center"
        android:layout_height="50dp"
        android:background="#ffffff" />
    <Space android:layout_width="fill_parent" android:layout_height="30dp"/>
    <TextView android:text="     File Contents:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <EditText android:id="@+id/fcontent1" android:layout_width="300dp" android:layout_gravity="center"
        android:layout_height="79dp" android:background="#ffffff"
        android:clickable="true" />
    <Space android:layout_width="fill_parent" android:layout_height="20dp"/>

    <TextView android:text="     Encrypted Expression:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <EditText android:id="@+id/encexp2" android:layout_width="300dp" android:layout_gravity="center"
        android:layout_height="101dp"
        android:background="#ffffff"
        android:clickable="true" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="40dp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="8"
        android:rowCount="1"
        android:layout_gravity="center">
        <Space android:layout_column="1" android:layout_width="40dp" android:layout_height="40dp"/>
        <ImageButton
            android:id="@+id/btnencfile"
            android:text="Encrypt"
            android:src="@mipmap/encryptfile"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"/>
        <Space android:layout_column="3" android:layout_width="30dp" android:layout_height="30dp"/>
        <ImageButton android:id="@+id/btnsave1"
            android:text="Save"
            android:src="@mipmap/save"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space android:layout_column="5" android:layout_width="30dp" android:layout_height="30dp"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/resetEFF"
            android:background="#000000"
            android:src="@mipmap/refresh"
            android:layout_column="7"/>
    </GridLayout>
</LinearLayout>